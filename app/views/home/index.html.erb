<section class="intro">
	<div class="get-started-intro">
		<p>Search for a court or tribunal in England and Wales, or a tribunal in Scotland.</p>
	</div>
</section>

<div class="find-nearest">
	<form method="get" action="/search" id="local-locator-form" class="find-location-for-service">
		<fieldset>
			<legend class="visuallyhidden">Postcode lookup</legend>
			<div class="ask_location">
				<label for="search-main">Enter a UK postcode, court or tribunal name<br />
					<input class="postcode" id="search-main" name="q" type="text" placeholder="e.g. SW1H9AJ or Liverpool Crown Court" autocomplete="off" />
				</label>

				<div id="results"></div>

				<div id="filters">
					<label for="area_of_law">Area of law (optional)<br />
						<%
							options = ''
							@areas_of_law.each do | title, list |
								if title == 'top-level'
									options += options_for_select(list)
								else
									options += grouped_options_for_select( { title => list }, nil )
								end
							end

							options += "<option value>All law</option>"
						%>
						<%= select_tag "area_of_law",
								options,
								:prompt => 'Please select an area of law â€¦'
						%>
					</label>
					<button type="submit" class="button">Search</button>
				</div>
			</div>
		</fieldset>
	</form>
</div>
<h3>Other search options</h3>
<p><%= link_to 'View all courts and tribunals', courts_path %></p>
<p><%= link_to 'View by region', regions_path %></p>
<p><%= link_to 'View by areas of law', areas_of_law_path %></p>
